<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminMainActivity">

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="478dp"
        android:layout_height="233dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bg_appointment" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Hello! Admin"
        android:fontFamily="@font/inter_semibold"

        android:textColor="@color/white"

        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView17" />

    <Button
        android:id="@+id/buttonManageUserAppointments"
        android:layout_width="288dp"
        android:layout_height="44dp"
        android:layout_marginTop="64dp"
        android:text="Manage Appointments"
        android:background="@drawable/gradient_rounded_button"
        android:fontFamily="@font/poppins_semibold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView17" />

    <Button
        android:id="@+id/buttonManageUserAccount"
        android:layout_width="288dp"
        android:layout_height="44dp"
        android:layout_marginTop="120dp"
        android:text="Manage User Accounts"
        android:background="@drawable/gradient_rounded_button"
        android:fontFamily="@font/poppins_semibold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonManageUserAppointments"
        app:layout_constraintStart_toStartOf="@+id/buttonManageUserAppointments"
        app:layout_constraintTop_toBottomOf="@+id/buttonManageUserAppointments" />

    <Button
        android:id="@+id/buttonManageVaccines"
        android:layout_width="288dp"
        android:layout_height="44dp"
        android:layout_marginTop="128dp"
        android:text="Manage Vaccines"
        android:background="@drawable/gradient_rounded_button"
        android:fontFamily="@font/poppins_semibold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonManageUserAccount"
        app:layout_constraintStart_toStartOf="@+id/buttonManageUserAccount"
        app:layout_constraintTop_toBottomOf="@+id/buttonManageUserAccount" />
</androidx.constraintlayout.widget.ConstraintLayout>