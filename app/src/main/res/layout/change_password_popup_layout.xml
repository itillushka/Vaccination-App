<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497"
        app:srcCompat="@drawable/change_password_background" />

    <TextView
        android:id="@+id/textViewStatic20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Change Password"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.159"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.144" />

    <EditText
        android:id="@+id/editTextChangeOldPassword"
        android:layout_width="326dp"
        android:layout_height="45dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/fancy_edittext"
        android:drawableStart="@drawable/password_register_icon"
        android:drawablePadding="8dp"
        android:ems="10"
        android:fontFamily="@font/inter_regular"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:textColor="@color/text_gray"
        android:textSize="14dp"
        android:hint="Old Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewStatic20" />

    <EditText
        android:id="@+id/editTextChangeNewPassword"
        android:layout_width="326dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/fancy_edittext"
        android:drawableStart="@drawable/password_register_icon"
        android:drawablePadding="8dp"
        android:ems="10"
        android:fontFamily="@font/inter_regular"
        android:hint="New Password"
        android:inputType="textPassword"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:textColor="@color/text_gray"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextChangeOldPassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextChangeOldPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextChangeOldPassword" />

    <EditText
        android:id="@+id/editTextChangeRepeatPassword"
        android:layout_width="326dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/fancy_edittext"
        android:drawableStart="@drawable/password_register_icon"
        android:drawablePadding="8dp"
        android:ems="10"
        android:fontFamily="@font/inter_regular"
        android:hint="Repeat Password"
        android:inputType="textPassword"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:textColor="@color/text_gray"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextChangeNewPassword"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/editTextChangeNewPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextChangeNewPassword" />

    <Button
        android:id="@+id/buttonClosePasswordPopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:text="Close"
        app:layout_constraintBottom_toBottomOf="@+id/buttonConfirmPasswordPopup"
        app:layout_constraintEnd_toStartOf="@+id/buttonConfirmPasswordPopup"
        app:layout_constraintTop_toTopOf="@+id/buttonConfirmPasswordPopup"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonConfirmPasswordPopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:text="Confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextChangeRepeatPassword" />
</androidx.constraintlayout.widget.ConstraintLayout>